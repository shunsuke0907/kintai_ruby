所属長承認：<%= @approval_status.nil? ? '未申請' : @approval_status; %>

<%= form_for(@attendance_approval_request, url: create_approval_status_path(@user, @first_day), method: :post) do |f| %>
  <%= f.select :approver, @superior_list, {include_blank: '未選択', selected: '未選択'} %>
  <%= f.submit '申請', class: "btn btn-primary" %>
<% end %>